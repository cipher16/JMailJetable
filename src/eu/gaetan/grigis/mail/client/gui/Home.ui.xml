<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:eu.gaetan.grigis.mail.client.gui'>

  <ui:image field='logo' src='gwt-logo.png'/>

  <ui:style>
  .panel {
    padding: 10px;
    margin: 0 auto;
    width: 80%;
 	}

  .aboutText {
    text-align: left;
  }

  @sprite .logo {
    gwt-image: 'logo';
    float: left;
    padding-right: 1em;
  }

  .buttons {
    text-align: right;
  }
  </ui:style>

  <g:HTMLPanel styleName='{style.panel}'>
    <div class='{style.logo}'/>

    <div class='{style.aboutText}'>
    This sample application demonstrates the
    construction of a complex user interface using GWT's built-in
    widgets. Have a look at the code to see how easy it is to build
    your own apps!
    </div>

    <div class='{style.buttons}'>
      <g:TextBox text='mail' ui:field='mailAdress'/>
      @mail-jetable.appspotmail.com
      <g:Button text='Create or Retrieve' ui:field='createAdress' />
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
